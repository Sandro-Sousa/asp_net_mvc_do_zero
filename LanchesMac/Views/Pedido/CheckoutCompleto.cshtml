@model Pedido
<br />
<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <p>Cliente</p> <strong>@Model.Nome</strong>
            <p>Data do Pedido</p> <strong>@Model.PedidoEnviado</strong>
            <p>Cliente</p> <strong>@Model.PedidoId</strong>
            <br />
            @foreach (var item in Model.PedidoItens)
            {
                <img src="@item.Lanche.ImagemUrl" width="40" height="40" />
                <ul>@item.Quantidade</ul>
                <ul>@item.Lanche.Nome</ul>
                <ul>@item.Lanche.Preco</ul>
            }
            <br />
            @if (ViewBag.TotalPedido != null)
            {
                <p>Valor Total do Pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></p>
            }

        </div>
    </div>    
</div>